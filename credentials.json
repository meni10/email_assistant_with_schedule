import base64
import os

# Fetch the Base64 encoded string from the environment variable
google_credentials_base64 = os.getenv("GOOGLE_CREDENTIALS_BASE64")

if google_credentials_base64:
    # Decode the Base64 string
    credentials_json = base64.b64decode(google_credentials_base64)

    # Save the decoded data to credentials.json in the current working directory
    with open('credentials.json', 'wb') as f:
        f.write(credentials_json)
else:
    print("Google credentials not found in environment variables.")
